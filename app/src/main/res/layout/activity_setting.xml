<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    tools:context=".activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/toolbar_bg"
        android:elevation="5dp"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ig_arrowback_logo" />


        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/txt_setting"
            android:textColor="@color/black_chat"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_link_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ig_linkdevice_logo"/>

            <TextView
                android:id="@+id/txt_link_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_linked_devices"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black_chat"
                android:fontFamily="@font/rubik_medium"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dialog_btn_background"
            android:alpha="0.2"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_my_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ig_mydevice_logo"/>

            <TextView
                android:id="@+id/txt_my_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_my_account"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black_chat"
                android:fontFamily="@font/rubik_medium"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dialog_btn_background"
            android:alpha="0.2"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ig_chat_logo"/>

            <TextView
                android:id="@+id/txt_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_chat"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black_chat"
                android:fontFamily="@font/rubik_medium"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dialog_btn_background"
            android:alpha="0.2"
            android:layout_marginHorizontal="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ig_help_logo"/>

            <TextView
                android:id="@+id/txt_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_help"
                android:textSize="16sp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black_chat"
                android:fontFamily="@font/rubik_medium"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dialog_btn_background"
            android:alpha="0.2"
            android:layout_marginHorizontal="20dp"/>


    </LinearLayout>



</RelativeLayout>